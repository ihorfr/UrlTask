@model WebApplication1.Models.UrlViewModel

@{
    ViewBag.Title = "Url Form";
}

@using (Html.BeginForm("UrlForm", "Url"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Url Form</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Enter Url List", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.TextBoxFor(model => model.UrlText, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextAreaFor(model => model.UrlText, 15, 50, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UrlText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ok" class="btn btn-default" />
            </div>
        </div>
    </div>
}

